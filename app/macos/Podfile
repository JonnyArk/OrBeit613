platform :osx, '12.4'

# CocoaPods analytics sends network stats synchronously affecting flutter build latency.
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

def flutter_root
  generated_xcode_build_settings_path = File.expand_path(File.join('..', 'Flutter', 'ephemeral', 'Flutter-Generated.xcconfig'), __FILE__)
  unless File.exist?(generated_xcode_build_settings_path)
    raise "#{generated_xcode_build_settings_path} must exist. If you're running pod install manually, make sure 'flutter pub get' is executed first"
  end

  File.foreach(generated_xcode_build_settings_path) do |line|
    matches = line.match(/FLUTTER_ROOT\=(.*)/)
    return matches[1].strip if matches
  end
  raise "FLUTTER_ROOT not found in #{generated_xcode_build_settings_path}. Try deleting Flutter-Generated.xcconfig, then run 'flutter pub get'"
end

require File.expand_path(File.join('packages', 'flutter_tools', 'bin', 'podhelper'), flutter_root)

flutter_macos_podfile_setup

target 'Runner' do
  use_frameworks!

  flutter_install_all_macos_pods File.dirname(File.realpath(__FILE__))
  target 'RunnerTests' do
    inherit! :search_paths
  end
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    puts "Processing target: #{target.name}"
    flutter_additional_macos_build_settings(target)
    target.build_configurations.each do |config|
      config.build_settings['MACOSX_DEPLOYMENT_TARGET'] = '12.4'
      
      if target.name == 'BoringSSL-GRPC'
        # Force overwrite warnings to just suppress everything
        config.build_settings['WARNING_CFLAGS'] = ['-w']
        config.build_settings['GCC_WARN_INHIBIT_ALL_WARNINGS'] = 'NO'
        
        # Also ensure OTHER_CFLAGS doesn't have the bad flag
        ['OTHER_CFLAGS', 'OTHER_CPLUSPLUSFLAGS'].each do |key|
          flags = config.build_settings[key]
          if flags
            # Remove anything starting with -G
            if flags.is_a?(Array)
               config.build_settings[key] = flags.reject { |f| f.start_with?('-G') }
            elsif flags.is_a?(String)
               # Remove -G... chunks
               config.build_settings[key] = flags.gsub(/-G\S*/, '')
            end
          end
        end
        
        # Also force disable the assembler files causing the issue
        config.build_settings['GCC_PREPROCESSOR_DEFINITIONS'] ||= ['$(inherited)']
        config.build_settings['GCC_PREPROCESSOR_DEFINITIONS'] << 'OPENSSL_NO_ASM=1'
      end

      # Fix for gRPC-Core template error in newer clang
      if target.name == 'gRPC-Core' || target.name == 'gRPC-C++'
        ['WARNING_CFLAGS', 'OTHER_CFLAGS'].each do |key|
          flags = config.build_settings[key]
          if flags
             if flags.is_a?(String)
               config.build_settings[key] += ' -Wno-missing-template-arg-list-after-template-kw -Wno-comma'
             elsif flags.is_a?(Array)
               config.build_settings[key] << '-Wno-missing-template-arg-list-after-template-kw'
               config.build_settings[key] << '-Wno-comma'
             end
          else
             config.build_settings[key] = ['$(inherited)', '-Wno-missing-template-arg-list-after-template-kw', '-Wno-comma']
          end
        end
      end
    end
    
    # Strip flags from individual files
    if target.name == 'BoringSSL-GRPC'
      target.source_build_phase.files.each do |file|
        if file.settings && file.settings['COMPILER_FLAGS']
          flags = file.settings['COMPILER_FLAGS']
          # Remove the specific flag string
          flags = flags.gsub('-GCC_WARN_INHIBIT_ALL_WARNINGS', '')
          # Remove any standalone -G
          flags = flags.gsub(/\s?-G\b/, '')
          file.settings['COMPILER_FLAGS'] = flags
        end
      end
    end
  end
end
